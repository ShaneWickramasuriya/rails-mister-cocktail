<div class="container">
  <%= link_to "Go home", cocktails_path  %>
  <h1><%= @cocktail.name %></h1>
  <p>----</p>
  <h3>Ingredients</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Delete", dose_path(dose), method: :delete %></li>
    <% end %>
  </ul>
    <h4>Add new dose for <%= @cocktail.name %></h4>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, class: "btn btn-dark"%>
  <% end %>
</div>
