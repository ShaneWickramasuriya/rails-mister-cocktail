<div class="container">
  <% @cocktails.each do |cocktail| %>

  <div class="whole-card">
    <div class="cocktail-card d-flex justify-content-between align-items-center" data-toggle="collapse" data-target="#card<%= cocktail.id %>" aria-expanded="false" aria-controls="collapseExample">
      <h2><%= cocktail.name %>    </h2>
          <%= link_to cocktail_path(cocktail) do %>
          <i class="fas fa-info-circle"></i>
          <% end %>
    </div>
    <div class="collapse" id="card<%= cocktail.id %>">
      <div class="cocktail-info d-flex">
        <div class="cocktail-content flex-grow-1">
          <h3>Ingredients</h3>
          <% cocktail.doses.each do |dose| %>
          <ul>
            <li><%= dose.description %> - <%= dose.ingredient.name %></li>
          </ul>
          <% end %>
        </div>
        <div class="cocktail-box-photo">
          <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
